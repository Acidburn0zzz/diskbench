ioengine=libaio
# IOMeter defines the server loads as the following:
# iodepth=1 Linear
# iodepth=4 Very Light
# iodepth=8 Light
# iodepth=64  Moderate
# iodepth=256 Heavy
iodepth=64

# Settings from environment variables
numjobs=${NUMJOBS}